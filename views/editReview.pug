extends base

block content
  main.main
    .editReview-form
      h2.heading-secondary.ma-bt-lg Edit Review
      input#reviewId.form-control(type='hidden', name='postId', value=reviewId)
      input#postid.form-control(type='hidden', name='postId', value=review.post)
      form.form.form--editReview
        .form__group
          input#review.form__input(type='text', value= `${review.review}`,required)
        .form__group
          select#rating.form-select(aria-label='Default select example', style='background-color: #f2f2f2; color:inherit' required='').fs-4.p-4
            option(selected=``).fs-3 Rating
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5


        .form__group
          button.btn.btn-success.mt-3.fs-4.p-3.text-capitalize(style='width: 100%') Edit