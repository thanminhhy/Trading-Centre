extends base

block content
  main.main
    .editReview-form
      h2.heading-secondary.ma-bt-lg Edit Review
      input#reviewId.form-control(type='hidden', name='postId', value=reviewId)
      input#postid.form-control(type='hidden', name='postId', value=review.post)
      form.form.form--editReview
        .form__group
          label.form__label(for='review') Description
          input#review.form__input(type='text', value= `${review.review}`,required)
        .form__group
          label.form__label(for='rating') Rating
          select#rating(name='rating' size='4', required)
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5

        .form__group
          button.btn.btn--green Edit